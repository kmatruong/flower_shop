<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="footer_nav_container d-flex flex-sm-row flex-column
          align-items-center justify-content-lg-start justify-content-center
          text-center">
          <ul class="footer_nav">
            <li><%= link_to t(".faqs"), "#" %></li>
            <li><%= link_to t(".contact_us"), "#" %></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="footer_social d-flex flex-row align-items-center
          justify-content-lg-end justify-content-center">
          <ul>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-facebook" aria-hidden="true"></i>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-twitter" aria-hidden="true"></i>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-instagram" aria-hidden="true"></i>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-skype" aria-hidden="true"></i>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-pinterest" aria-hidden="true"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="footer_nav_container">
          <div class="cr"><%= t ".trademark" %>
            <i class="fa fa-heart-o" aria-hidden="true"></i> <%= t ".by" %>
            <%= link_to t(".author"), Settings.author_reference %>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
